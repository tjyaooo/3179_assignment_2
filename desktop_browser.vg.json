{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "./data/browser_cleaned.csv"
  },
  "width": "container",
  "height": 450,
  "transform": [
    {"calculate": "datum.Share/100","as": "Browser Market Share (%)"}
  ],
  "layer": [
    {
      "encoding": {
        "x": {"field": "Year", "type": "nominal"},
        "y": {"field": "Share", "type": "quantitative","title":"Browser Market Share (%)"},
        "color": {
          "field": "Browser",
          "type": "nominal",
          "scale":{
            "domain":["Chrome", "IE","360 Safe Browser","Edge", "Edge Legacy", "Firefox", "Safari", "Sogou Explorer","Other"],
            "range":["#ff7f00","#6a3d9a","#F8D780","#fdbf6f", "#fb9a99", "#EE4A92", "#33a02c", "#1f78b4","#544D4D"]
          }
        }
      },
      "layer": [
        {"mark": "line"},
        {
          "params": [{
            "name": "label",
            "select": {
              "type": "point",
              "encodings": ["x"],
              "nearest": true,
              "on": "mouseover"
            }
          }],
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {
                "param": "label",
                "empty": false,
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"param": "label", "empty": false}}],
      "layer": [
        {
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {
            "x": {"type": "nominal", "field": "Year"}
          }
        },
        {
          "encoding": {
            "text": {"field": "Browser Market Share (%)", "type": "quantitative", "format": "0.2%"},
            "x": {"type": "nominal", "field": "Year"},
            "y": {"field": "Share", "type": "quantitative"}
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "left",
                "dx": 5,
                "dy": -5
              }
            },
            {
              "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
              "encoding": {
                "color": {"type": "nominal", "field": "Browser"}
              }
            }
          ]
        }
      ]
    }
  ]
}
