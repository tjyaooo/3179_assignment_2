
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Android Market Share in Percentages (%)",
    "align": "center"
  },
  "width": 800,
  "height": 600,
  
  "params": [
    {
    "name": "Continent_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "North America",
    "South America",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "labels":[
    "Show All",
    "North America",
    "South America",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "name": "Continent Selection: "
    }
    },

    {
      "name": "year_selection",
      "value": 2013,
      "bind": {
      "input": "range",
      "min": 2013,
      "max": 2021,
      "step": 2,
      "name": "Year: "
        }
      },

    {
    "name": "marketshare_above",
    "value": 0,
    "bind": {
    "input": "range",
    "min": 0,
    "max": 100,
    "step": 1,
    "name": "Minimum Market Share (%): "
      }
    },

    {
      "name": "marketshare_below",
      "value": 100,
      "bind": {
      "input": "range",
      "min": 0,
      "max": 100,
      "step": 1,
      "name": "Maximum Market Share (%): "
        }
    }
  ],
  
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "./os_combined_years.csv"
        },
        "key": "Continent",
        "fields": ["Android"]
      }

    },

    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "./world_region.csv"
        },
        "key": "Country",
        "fields": ["Region"]
      }
    },
    {"filter": "datum.Android > marketshare_above && datum.Android < marketshare_below"},

    {"calculate": "datum.Android","as": "Android Market Share (%)"},
    {"calculate": "datum.Android/100","as": "Android Market Share"},
    {"filter": "Continent_selection == null || datum.Region == Continent_selection"}
  ],

  "projection": {"type": "equirectangular"},
  "encoding": {
    "color": {
      "field": "Android Market Share (%)",
      "type": "quantitative",
      "scale":{
        "type":"threshold",
        "domain":[10,30,50,70,90],
        "range": ["#f1eef6", "#d0d1e6", "#a6bddb", "#74a9cf","#2b8cbe","#045a8d"]
      }
    },
  
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Android Market Share", "type": "quantitative","format": "0.2%"},
      {"field": "Region", "type": "nominal","title": "Continent"}
    ]
  },
  "layer":[
  {   
  "mark": {"type": "geoshape",
  "stroke": "#000000",
  "strokeWidth": 0.5}
  },
{
  "mark": {
    "type": "text",
    "align": "left",
    "baseline": "middle",
    "fontSize": 13,
    "fontStyle": "italic",
    "fontWeight":"bold",
    "dx": -20
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "./country_centre_coord.json"
        },
        "key": "country",
        "fields": ["latitude","longitude"]
      }
    },
    {"filter": "datum.Android > marketshare_above"},
    {"filter": "datum.Android < marketshare_below"}
  ],
  "encoding": {
    "text": {"field": "properties.NAME", "type": "nominal"},
    "color": {"value": "black"},
    "longitude": {
      "field": "longitude",
      "type": "quantitative"
    },
    "latitude": {
      "field": "latitude",
      "type": "quantitative"
    },
    "opacity": {
      "condition": {
      "test": "datum.properties.NAME == 'China'|| datum.properties.NAME == 'Australia' || datum.properties.NAME == 'Brazil' ||datum.properties.NAME == 'Italy' || datum.properties.NAME == 'Canada' || datum.properties.NAME == 'Mexico' || datum.properties.NAME == 'Thailand' || datum.properties.NAME == 'Russia' ",
      "value": 1
      },
      "value": 0
      }
  }
}
]
}