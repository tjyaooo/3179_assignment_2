
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Android Market Share in Percentages (%)",
    "align": "center"
  },
  "width": 800,
  "height": 600,
  
  "params": [
    {
    "name": "Continent_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "North America",
    "South America",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "labels":[
    "Show All",
    "North America",
    "South America",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "name": "Continent Selection: "
    }
    },

    {
      "name": "year_selection",
      "value": 2013,
      "bind": {
      "input": "range",
      "min": 2013,
      "max": 2021,
      "step": 2,
      "name": "Year: "
        }
      },

    {
    "name": "marketshare_above",
    "value": 0,
    "bind": {
    "input": "range",
    "min": 0,
    "max": 100,
    "step": 1,
    "name": "Minimum Market Share (%): "
      }
    },

    {
      "name": "marketshare_below",
      "value": 100,
      "bind": {
      "input": "range",
      "min": 0,
      "max": 100,
      "step": 1,
      "name": "Maximum Market Share (%): "
        }
    }
  ],
  
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray"}
    },

    {
      "data":{
          "url":"./data/os_combined_years.csv"
        },
        "transform": 
        [
          {
            "lookup": "Continent",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.NAME"
            },
            "as":"geo"
          },
          {"filter": "datum.Year == year_selection"},
          {
            "lookup": "Continent",
            "from": {
              "data": {
                "url": "./data/world_region.csv"
              },
              "key": "Country",
              "fields": ["Region"]
            }
          },

          {"filter": "datum.Android > marketshare_above && datum.Android < marketshare_below"},
          {"calculate": "datum.Android","as": "Android Market Share (%)"},
          {"calculate": "datum.Android/100","as": "Android Market Share"},
          {"filter": "Continent_selection == null || datum.Region == Continent_selection"}
        ],
      "layer":[
        {  
        "projection": {"type": "equirectangular"},
        "mark": {"type": "geoshape",
        "stroke": "#000000",
        "strokeWidth": 0.5},                
        "encoding": {
        "shape":{
          "field":"geo",
          "type":"geojson"
          },
        "color": {
          "field": "Android Market Share (%)",
          "type": "quantitative",
          "scale":{
            "type":"threshold",
            "domain":[10,30,50,70,90],
            "range": ["#f1eef6", "#d0d1e6", "#a6bddb", "#74a9cf","#2b8cbe","#045a8d"]
          }
        },
          "tooltip": [
            {"field": "Continent", "type": "nominal", "title": "Country"},
            {"field": "Android Market Share", "type": "quantitative","format": "0.2%"},
            {"field": "Region", "type": "nominal","title": "Continent"}
          ]
        }
        },

        {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "fontSize": 10,
          "fontStyle": "italic",
          "fontWeight":"bold",
          "dx": -20
        },
        "transform": [
          {
            "lookup": "Continent",
            "from": {
              "data": {
                "url": "./country_centre_coord.json"
              },
              "key": "country",
              "fields": ["latitude","longitude"]
            }
          }
        ],
        "encoding": {
          "text": {"field": "Continent", "type": "nominal"},
          "color": {"value": "black"},
          "longitude": {
            "field": "longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "latitude",
            "type": "quantitative"
          },
          "opacity": {
            "condition": {
            "test": "datum.Continent == 'China'|| datum.Continent == 'Australia' || datum.Continent == 'Brazil'  || datum.Continent == 'Italy' || datum.Continent  == 'Canada' || datum.Continent  == 'Mexico' || datum.Continent  == 'Thailand' || datum.Continent  == 'Russia'",
            "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Continent", "type": "nominal", "title": "Country"},
            {"field": "Android Market Share", "type": "quantitative","format": "0.2%"},
            {"field": "Region", "type": "nominal","title": "Continent"}
          ]
        }
        }
    ]
}
]
}